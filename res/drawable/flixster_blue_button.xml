<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true"><!-- pressed -->
	    <shape android:shape="rectangle">
		    <solid
		        android:color="@color/flixster_lightblue_button_color" />
		   
		    <padding android:left="8dp"
		        android:top="8dp"
		        android:right="8dp"
		        android:bottom="8dp" />
		    <corners android:radius="8dp" />
		</shape> 
    </item>
    <item android:state_enabled="false"><!-- pressed -->
	    <shape android:shape="rectangle">
		    <solid
		        android:color="@color/flixster_grey" />
		   
		    <padding android:left="8dp"
		        android:top="8dp"
		        android:right="8dp"
		        android:bottom="8dp" />
		    <corners android:radius="8dp" />
		</shape> 
    </item>
    
    <item > <!-- default -->
	    <shape android:shape="rectangle">
		    <solid
		        android:color="@color/flixster_video_blue" />
		    <padding android:left="8dp"
		        android:top="8dp"
		        android:right="8dp"
		        android:bottom="8dp" />
		    <corners android:radius="8dp" />
		</shape> 
    </item>
    
</selector>