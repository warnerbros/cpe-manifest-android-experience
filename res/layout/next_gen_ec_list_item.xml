<?xml version="1.0" encoding="utf-8"?>
<com.wb.nextgen.widget.FixedAspectRatioFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nextgen="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    nextgen:aspectRatioWidth="16"
    nextgen:aspectRatioHeight="9">
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.wb.nextgen.widget.SelectedOverlayImageView
            android:id="@+id/ec_list_image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerHorizontal="true"
            nextgen:inActiveOverlayDrawable="@drawable/play_button"
            nextgen:inActiveOverlayColor="@color/transparent_black"
            android:scaleType="fitCenter"
            android:duplicateParentState="true"
            android:src="@drawable/ec_sample_thumbnail"/>
        <TextView
            android:id="@+id/ec_list_name_text"
            android:layout_below="@+id/ec_list_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:lines="1"
            android:ellipsize="end"
            android:text="goes here"/>

            <!--<ImageView
                android:id="@+id/ec_inactive_mask"
                android:background="@color/transparent_gray"
                android:layout_centerInParent="true"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:scaleType="center"
                android:src="@android:drawable/ic_media_play"/>-->

    </RelativeLayout>
</com.wb.nextgen.widget.FixedAspectRatioFrameLayout>