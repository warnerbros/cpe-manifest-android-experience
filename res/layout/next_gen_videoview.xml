<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:nextgen="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">
    <com.wb.nextgen.widget.FixedAspectRatioFrameLayout
        nextgen:aspectRatioWidth="16"
        nextgen:aspectRatioHeight="9"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        nextgen:whenOrientation="PORTRAIT"
        android:background="@color/black">
        <RelativeLayout
            android:id="@+id/video_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.wb.nextgen.videoview.ObservableVideoView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:id="@+id/surface_view"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerInParent="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/skip_this_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/textLarge"
                    android:visibility="invisible"
                    android:layout_gravity="center">
                    <ProgressBar
                        android:id="@+id/skip_this_countdown"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressDrawable="@drawable/skip_progress"
                        android:layout_width="@dimen/textLarge"
                        android:layout_height="@dimen/textLarge"
                        android:layout_gravity="center_vertical"
                        android:visibility="visible"/>
                    <TextView
                        android:paddingLeft="@dimen/spacing_normal"
                        android:paddingRight="@dimen/spacing_normal"
                        android:id="@+id/skip_this_text"
                        android:text="@string/skip_this"
                        android:textColor="@color/drawer_yellow"
                        android:textSize="@dimen/textLarge"
                        android:fontFamily="sans-serif-condensed"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:src="@drawable/skip_arrow"
                        android:layout_width="@dimen/textLarge"
                        android:layout_height="@dimen/textLarge"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"/>


            </LinearLayout>

        </RelativeLayout>
    </com.wb.nextgen.widget.FixedAspectRatioFrameLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/next_gen_ime_bottom_view">

        <ImageView
            android:id="@+id/ime_background_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

</LinearLayout>