        <item name="pstsIndicatorHeight">8dp</item>
        <item name="pstsTextAllCaps">false</item>
        <item name="pstsUnderlineColor">#2a97cc</item>
        <item name="pstsUnderlineHeight">0dp</item>
    </style>
    
	<style name="subheader_text" parent="@style/TextNormalBold">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/subheader_text</item>
    </style>
    
	<style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
	    <item name="android:windowNoTitle">true</item>
	    <item name="windowActionBar">false</item>
	    <item name="android:windowFullscreen">true</item>
	    <item name="android:windowContentOverlay">@null</item>
	</style>
	
		
</resources>