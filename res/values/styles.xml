    </style>

    <!-- Individual activity theme -->

    <style name="TransparentDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@color/transparent_black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="MovieTileProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal</item>
    </style>
    
    <style name="HoloLightProgressBarHorizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">16dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>
    
    <style name="HoloLightProgressBarHorizontalNoPadding">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:progressDrawable">@drawable/progress_horizontal_holo_light_nopadding</item>
        <item name="android:indeterminateDrawable">@drawable/progress_indeterminate_horizontal_holo</item>
        <item name="android:minWidth">48dip</item>
        <item name="android:maxWidth">48dip</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">16dip</item>
    </style>
    
    
    <style name="DialogStyle" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
 
    </style>

    <style name="MainMenuStyle">
        <item name="android:background">@color/flixster_tab_normal_color</item>
        <item name="android:textColor">@color/flixster_tab_text_normal_color</item>
        <item name="android:textSize">@dimen/textSmall</item>
    </style>
    
	<style name="TransparentFloatingDialog" parent="@style/DialogStyle">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@color/transparent_black2</item>
		<item name="android:windowNoTitle">false</item>
		<item name="android:windowIsFloating">true</item>
	</style>
	
	<style name="AlertDialog" parent="@android:style/Theme.Light">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsFloating">true</item>
		<item name="android:background">@color/black</item>
	</style>
	
	<style name="AlertDialog.TitleText" parent="@style/TextLarge">
	    <item name="android:textColor">@color/white</item>
	</style>
	
	<style name="AlertDialog.BodyText" parent="@style/TextMedium">
	    <item name="android:textColor">@color/white</item>
	</style>
	
	<style name="CenterAlignedAlertDialog" parent="@style/AlertDialog">
		<item name="android:gravity">center_horizontal</item>
	</style>
	
	<style name="AlertDialogButton" parent="@android:style/Widget.ListView">
	    <item name="android:textAppearance">@style/TextNormal</item>
	    <item name="android:minHeight">@dimen/alert_dialog_button_bar_height</item>
    </style>
	
	<style name="AlertDialogButtonBottomRight" parent="@style/AlertDialogButton">
    </style>
    
	<style name="SlidingTabStrip" parent="@style/navbar_text">
        <item name="android:background">@color/bg_inactive</item>
        <item name="pstsDividerColor">#909090</item>
