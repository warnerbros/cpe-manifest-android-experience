<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomTabStyle">
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomTabBG" parent="@android:style/Widget.TabWidget"></style>

    <style name="FlixsterListView" parent="@android:style/Widget.ListView">
        <item name="android:background">@drawable/listitem_bg</item>
        <item name="android:divider">@drawable/listdivider</item>
    </style>

    <style name="FlixsterListItem">
        <!-- <item name="android:background">@drawable/listpanel</item> -->
    </style>
    
    <style name="SearchListItem"  parent="@android:style/Widget.ListView">
        <item name="android:background">@color/whitegray</item>
        <item name="android:divider">@color/divider2</item>
        <item name="android:dividerHeight">2px</item>
    </style>
    <!--
		Use this to get rid of the drop shadow above tab widgets and notification
		bar
		<style name="FlixsterTopTheme" parent="@android:style/Theme.Dialog">

		<style name="FlixsterTopTheme" parent="@android:style/Theme.Light">
    -->
    <style name="FlixsterTopTheme" parent="@android:style/Theme.Holo.Light">
        <!--<item name="android:windowContentOverlay">@drawable/listdivider</item>-->
        <item name="android:tabWidgetStyle">@style/CustomTabStyle</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textAppearance">@style/TextNormal</item>
        <item name="android:listViewStyle">@style/FlixsterListView</item>
    </style>
    
    <style name="FlixsterActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:tabWidgetStyle">@style/CustomTabStyle</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textAppearance">@style/TextNormalBold</item>
        
        <item name="android:icon">@drawable/ab_popcorn</item>
        
        <!-- flxabv44 generated action bar -->
        <item name="android:actionBarItemBackground">@drawable/selectable_background_flxabv44</item>
        <item name="android:actionBarTabStyle">@style/flxabv44_ActionBarTabStyle</item>
        <item name="android:actionBarStyle">@style/flxabv44_solid_ActionBar</item>
        <item name="android:selectableItemBackground">@drawable/selectable_background_flxabv44</item>
        
    </style>
    
    <style name="FlixsterWebViewStyle" parent="@style/Theme.AppCompat.Light">
    </style>

    <style name="FlixsterModalActivity" parent="@style/Theme.AppCompat.Light.DialogWhenLarge">
        <item name="android:windowCloseOnTouchOutside">true</item>
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowBackground">@color/transparent_black</item>
		<!--<item name="android:windowBackground">@android:color/transparent</item>  -->
    </style>

    <!--
    <style name="FlixsterModalActivityTablet" parent="@style/FlixsterModalActivity">
		<item name="android:windowBackground">@color/transparent_black2</item>
    </style>-->

    <!-- Flixster Action Bar v4.4 (http://jgilfelt.github.com/android-actionbarstylegenerator) -->
    
    <style name="Theme.flxabv44" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_flxabv44</item>
        <item name="android:popupMenuStyle">@style/flxabv44_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/flxabv44_DropDownListView</item>
        <item name="android:actionBarTabStyle">@style/flxabv44_ActionBarTabStyle</item>
        <item name="android:actionDropDownStyle">@style/flxabv44_DropDownNav</item>
        <item name="android:actionBarStyle">@style/flxabv44_solid_ActionBar</item>
        <item name="android:selectableItemBackground">@drawable/selectable_background_flxabv44</item>
        <item name="android:panelBackground">@drawable/menu_hardkey_panel_flxabv44</item>
    </style>
    
    <style name="flxabv44_solid_ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_flxabv44</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_flxabv44</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_flxabv44</item>
        <item name="android:progressBarStyle">@style/flxabv44_ProgressBar</item>
        <item name="android:titleTextStyle">@style/header_text</item> <!-- Flx custom -->
    </style>

    <style name="flxabv44_transparent_ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_flxabv44</item>
        <item name="android:progressBarStyle">@style/flxabv44_ProgressBar</item>
    </style>

    <style name="flxabv44_PopupMenu" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_flxabv44</item>
    </style>

    <style name="flxabv44_DropDownListView" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_flxabv44</item>
    </style>

    <style name="flxabv44_ActionBarTabStyle" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_flxabv44</item>
    </style>

    <style name="flxabv44_DropDownNav" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_flxabv44</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_flxabv44</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_flxabv44</item>
    </style>
    
    <style name="flxabv44_ProgressBar" parent="@style/Widget.AppCompat.Base.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_flxabv44</item>
    </style>
    

    <!-- End of Flixster Action Bar v4.4 -->
    
    <style name="FullscreenNoTitle" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@null</item>
    </style>
    
    <style name="Theme.Flx.BaseSelector" parent="@android:style/Theme.Holo.Light" />
    <style name="Theme.Flx.NoTitle" parent="@style/Theme.Flx.BaseSelector">
        <item name="android:windowNoTitle">true</item>
    </style>
    
	<!-- Theme for fullscreen video activities -->
    <style name="Theme.Flx.FullscreenVideo" parent="@style/Theme.Flx.NoTitle">
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- Widget -->

    <style name="widgetMovieTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="widgetMovieSubtitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- New Unified Text styles -->

    <style name="TextLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextLargeBold" parent="@style/TextLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextMedium" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextMediumBold" parent="@style/TextMedium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextNormal" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextNormalBold" parent="@style/TextNormal">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextSmallBold" parent="@style/TextSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSmaller" parent="@style/TextNormal">
        <item name="android:textSize">13sp</item>
    </style>
    
    <style name="TextXSmall" parent="@style/TextSmall">
        <item name="android:textSize">11sp</item>
    </style>
    
    <style name="TextXSmallBold" parent="@style/TextXSmall">
        <item name="android:textStyle">bold</item>  
    </style>
    
    <style name="TextTiny" parent="@style/TextSmall">
        <item name="android:textSize">6sp</item>
    </style>
    
    <style name="TextTinyBold" parent="@style/TextTiny">
        <item name="android:textStyle">bold</item>  
    </style>
    
    <style name="TextSmallGrey" parent="@style/TextSmall">
        <item name="android:textColor">@color/grey05</item>
    </style>

    <style name="TextSmallerGrey" parent="@style/TextSmaller">
        <item name="android:textColor">@color/grey05</item>
    </style>
    
    <style name="TextSubheader" parent="@style/TextNormalBold">
        <item name="android:shadowColor">@color/subheader_shadow</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:shadowDx">1.0</item>
        <item name="android:shadowDy">1.0</item>
    </style>

    <!-- Custom font styles -->

    <style name="tab_text" parent="@style/TextNormal">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/tab_textcolor</item>
    </style>

    <style name="movie_poster_item_text" parent="@style/TextNormal">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/subtitle_grey</item>
    </style>

    <style name="movie_poster_unfulfillable_text" parent="@style/TextNormal">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/subtitle_grey</item>
    </style>

    <style name="movie_poster_unavailable_text" parent="@style/TextNormal">
        <item name="android:textSize">8sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="hyperlink" parent="@style/TextNormalBold">
        <item name="android:textColor">@color/hyperlink</item>
    </style>

    <style name="small_hyperlink" parent="@style/TextSmall">
        <item name="android:textColor">@color/hyperlink</item>
    </style>
    
    <style name="subtitle" parent="@style/TextSmall">
        <item name="android:textColor">@color/subtitle_grey</item>
    </style>

    <style name="legend_text" parent="@style/TextNormal">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="header_text" parent="@style/TextNormalBold">
        <item name="android:textColor">@color/white</item>
