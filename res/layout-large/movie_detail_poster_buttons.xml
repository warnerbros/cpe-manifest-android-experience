<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" >

	
	<LinearLayout
		android:id="@+id/movieDetails"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/spacing_normal"
		android:orientation="horizontal" >
	        
		<RelativeLayout
	        android:layout_width="@dimen/movie_pro_width_tablet"
	        android:layout_height="@dimen/movie_pro_height_tablet">
		    
			<ImageView
			    android:id="@+id/moviedetails_poster"
		        android:layout_width="@dimen/movie_pro_width_tablet"
		        android:layout_height="@dimen/movie_pro_height_tablet"
			    android:scaleType="fitXY"
			    android:paddingRight="4dp"
			    android:paddingBottom="4dp"
			    android:background="@drawable/drop_shadow"
			    android:src="@drawable/poster_loading_small" />
		
			
		
		</RelativeLayout>   
	
		<LinearLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="@dimen/spacing_normal"
		    android:orientation="vertical">
			<include layout="@layout/metadata_panel"
				android:layout_marginLeft="@dimen/spacing_normal"
				android:layout_marginRight="@dimen/spacing_normal"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/moviedetails_metadata_bar"/>
			<TextView
		        android:id="@+id/watch_now_panel"
		        android:layout_width="wrap_content"
		        android:layout_height="@dimen/tds_watch_height"
		        android:minWidth="@dimen/tds_watch_width"
		    	android:background="@drawable/watchnow_background"
		        android:clickable="true"
		        android:drawableLeft="@drawable/icon_play"
		        android:focusable="true"
		        android:drawablePadding="@dimen/iconpanel_padding"
		        android:gravity="center"
		        android:padding="@dimen/iconpanel_padding"
		        android:text="@string/watch_now"
		        android:textAppearance="@style/TextSmallBold"
		        android:textColor="@color/tds_watch_btn_text_color"
		        android:visibility="visible" />
			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="10dp"
			    />	
			<include layout="@layout/download_panel" 
				android:id="@+id/md_download_panel"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/tds_watch_height"
				android:clickable="true"
				android:focusable="true"
				android:visibility="visible" />
			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="10dp"
			    />
			<TextView
				android:id="@+id/next_gen_panel"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/tds_watch_height"
				android:minWidth="@dimen/tds_watch_width"
				android:background="@android:color/holo_red_dark"
				android:clickable="true"
				android:drawableLeft="@drawable/icon_play"
				android:focusable="true"
				android:drawablePadding="@dimen/iconpanel_padding"
				android:gravity="center"
				android:padding="@dimen/iconpanel_padding"
				android:text="Next Gen"
				android:textAppearance="@style/TextSmallBold"
				android:textColor="@color/tds_watch_btn_text_color"
				android:visibility="gone" />
			
	    </LinearLayout>		
	</LinearLayout>

	<LinearLayout
		android:id="@+id/SubCapLinearLayout"
		android:paddingLeft="@dimen/spacing_normal"
		android:paddingRight="@dimen/spacing_normal"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >

	    <LinearLayout
	        android:id="@+id/audio_subtitle_select_panel"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/bgpanel_active_topdiv"
	        android:gravity="center_vertical"
	        android:clickable="true"
	        android:orientation="horizontal"
	        android:visibility="visible" >
	        
	        <TextView
	            android:id="@+id/audio_subtitle_label"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:layout_height="wrap_content"
	            android:paddingTop="@dimen/spacing_normal"
	            android:paddingBottom="@dimen/spacing_normal"
	            android:text="@string/audio_subtitle"
	            android:textAppearance="@style/TextSmallBold" />

	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="right" >
	       		<TextView
	       		    android:id="@+id/audio_subtitle_value"
	       		    android:layout_width="wrap_content"
	       		    android:layout_height="wrap_content"
	       		    android:paddingRight="@dimen/spacing_small"
	       		    android:textAppearance="@style/TextSmall"
	       		    android:textColor="@color/grey05"
	       		    android:text=""/>
	       		<ImageView
	       		    android:layout_width="14dp"
	       		    android:layout_height="14dp"
	       		    android:layout_gravity="center_vertical"
	       		    android:scaleType="fitCenter"
	       		    android:src="@drawable/icon_arrow_right"
	       		    android:adjustViewBounds="true" />
       		</LinearLayout>
	        
	    </LinearLayout>

	    
	   
	</LinearLayout>
</LinearLayout>