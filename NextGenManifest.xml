<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.wb.nextgenlibrary"
	android:installLocation="auto"
	android:versionCode="24"
	android:versionName="v2.0.4" >
	<uses-sdk
		android:minSdkVersion="18"
		android:targetSdkVersion="21" />

	<!-- Support all screens -->
	<supports-screens
		android:anyDensity="true"
		android:largeScreens="true"
		android:normalScreens="true"
		android:smallScreens="true"
		android:xlargeScreens="true" />

	<permission
		android:name="com.wb.nextgenlibrary.permission.MAPS_RECEIVE"
		android:protectionLevel="signature" />
	<uses-permission android:name="com.wb.nextgen.permission.MAPS_RECEIVE"/>

	<application
		android:largeHeap="true" >

		<meta-data
			android:name="com.google.android.gms.version"
			android:value="@integer/google_play_services_version" />
		<!-- NextGen Library -->
        <activity
            android:name="com.wb.nextgenlibrary.activity.LauncherActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.Nge.Transparent"/>
		<activity
			android:name="com.wb.nextgenlibrary.activity.StartupActivity"
			android:configChanges="orientation|screenSize"
			android:theme="@style/Theme.AppCompat.NoActionBar">

		</activity>
		<activity
			android:name="com.wb.nextgenlibrary.testassets.TestItemsActivity"
			android:configChanges="orientation|screenSize"
			android:theme="@style/Theme.AppCompat.NoActionBar">

		</activity>
		<activity
			android:name="com.wb.nextgenlibrary.activity.WebViewActivity"
			android:configChanges="orientation|screenSize"
			android:theme="@style/Theme.AppCompat.NoActionBar">

		</activity>

		<activity
			android:name="com.wb.nextgenlibrary.activity.InterStitialVideoPlayerActivity"
			android:screenOrientation="sensorLandscape"
			android:configChanges="orientation|screenSize"
			android:theme="@style/Theme.Nge.NoTitle">

		</activity>



		<activity android:name="com.wb.nextgenlibrary.activity.InMovieExperience"
				  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
				  android:exported="false"
				  android:theme="@style/NextGenPlayerActionBar" >

		</activity>

		<activity android:name="com.wb.nextgenlibrary.activity.OutOfMovieActivity"
				  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
				  android:exported="false"
				  android:theme="@style/ExtraActionBar" >
		</activity>
        <activity android:name="com.wb.nextgenlibrary.activity.ECGalleryActivity"
                 android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
                 android:exported="false"
                 android:theme="@style/ExtraActionBar" >
	    </activity>
		<activity android:name="com.wb.nextgenlibrary.activity.ECSceneLocationActivity"
				  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
				  android:exported="false"
				  android:theme="@style/ExtraActionBar" >
		</activity>
		<activity android:name="com.wb.nextgenlibrary.activity.ECVideoActivity"
				  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
				  android:exported="false"
				  android:theme="@style/ExtraActionBar" >
		</activity>
		<activity android:name="com.wb.nextgenlibrary.activity.ActorGalleryActivity"
				  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
				  android:exported="false"
				  android:theme="@style/ExtraActionBar" >
		</activity>
		<activity android:name="com.wb.nextgenlibrary.activity.ShopCategoryActivity"
				  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
				  android:exported="false"
				  android:theme="@style/ExtraActionBar" >
		</activity>
		<activity android:name="com.wb.nextgenlibrary.activity.ECInteractiveActivity"
				  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
				  android:exported="false"
				  android:theme="@style/ExtraActionBar" >
		</activity>
		<activity android:name="com.wb.nextgenlibrary.activity.ECShopItemDetailActivity"
				  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
				  android:exported="false"
				  android:theme="@style/ExtraActionBar" >
		</activity>

		<!-- phone -->
		<activity android:name="com.wb.nextgenlibrary.activity.phone.NGEActorsActivity_Phone"
				  android:screenOrientation="sensorPortrait"
				  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
				  android:exported="false"
				  android:theme="@style/ExtraActionBar" >
		</activity>
	</application>

</manifest>